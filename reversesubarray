#include<stdio.h>
#include<stdlib.h>

void reverse(int[],int,int,int);
void swap(int*,int *);
int main(){
    int n,i,j,k;
    printf("Enter numbers of elemnts in array : ");
    scanf("%d",&n);
    int arr[n];
    printf("\nEnter elements of array : \n");
    for(i=0;i<n;i++){
        scanf("%d",&arr[i]);
    }
    for(int i=0;i<n;i++)
        printf("%d\n",arr[i]);
    reverse(arr,n,0,3);
    printf("\nAfter reversing :");
    for(int i=0;i<n;i++)
        printf("%d \t",arr[i]);
    
}
void swap(int *p,int *q){
    int t=*p;
    *p=*q;
    *q=t;
}
void reverse(int arr[],int n,int lb,int ub){
    int k=ub;
    if(k>n){
        for(int i=lb;i<n;i++){
            swap(&arr[i],&arr[n-i-1]);
        }
    }
    else{
        reverse(arr,n,k,k+k);
        for(int i=lb;i<k;i++){
            swap(&arr[i],&arr[k-i]);
        }
    }

}
